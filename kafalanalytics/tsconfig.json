{
  "compileOnSave": false,
  "allowSyntheticDefaultImports": true,
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts",
    "universal/*"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "module" : "commonjs",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "removeComments": false,
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
